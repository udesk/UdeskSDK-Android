<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_root_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/udesk_100"
        android:orientation="horizontal"
        android:padding="@dimen/udesk_10">

        <include layout="@layout/udesk_img_itemview" />

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/udesk_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/udesk_15"
                android:layout_marginRight="@dimen/udesk_15"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/udesk_black"
                android:textSize="@dimen/udesk_sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/udesk_size"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/udesk_15"
                android:textColor="@color/udesk_color_999999"
                android:textSize="@dimen/udesk_sp14" />
        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/udesk_line_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/udesk_10"
        android:layout_marginRight="@dimen/udesk_10" />


</LinearLayout>