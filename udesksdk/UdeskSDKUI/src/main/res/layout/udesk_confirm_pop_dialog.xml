<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/udesk_loginDialog_background">

    <LinearLayout
        android:id="@+id/udesk_confirm_pop_panel"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/puw_bg_corners"
        android:minHeight="180dp"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:minHeight="120dp">

            <TextView
                android:id="@+id/udesk_confirm_pop_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autoLink="all"
                android:gravity="center_vertical|center_horizontal"
                android:maxHeight="@dimen/udesk_300"
                android:padding="15dp"
                android:textColor="@color/udesk_custom_dialog_cancle_btn_color"
                android:textSize="@dimen/udesk_sp18" />
        </FrameLayout>

        <include layout="@layout/udesk_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:minHeight="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/udesk_confirm_pop_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/puw_bt_selecter_left"
                android:gravity="center"
                android:textColor="@color/udesk_custom_dialog_cancle_btn_color"
                android:textSize="@dimen/udesk_sp15" />

            <include layout="@layout/udesk_line_vertical" />

            <TextView
                android:id="@+id/udesk_confirm_pop_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/puw_bt_selecter_right"
                android:gravity="center"
                android:textColor="@color/udesk_custom_dialog_sure_btn_color"
                android:textSize="@dimen/udesk_sp15" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>