<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="udesk_navi_button_text_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/udesk_color_middle_text</item>
        <item name="android:textSize">@dimen/udesk_navi_text_size</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="udesk_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/udesk_loginDialog_background</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="udesk_titlebar_button_text_style">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/udesk_color_middle_text</item>
        <item name="android:textSize">@dimen/udesk_navi_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Udesk_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/udesk_color_f0f2f2</item>
    </style>


    <style name="Theme_Audio_Record_Button">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="udesk_survy_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/udesk_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/udesk_pop_exit_anim</item>
    </style>
    <style name="udesk_default_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="udesk_app_market_dialog" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>