<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/udesk_confirm_pop_panel"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/udesk_confirm_pop_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#000000" />
        </FrameLayout>

        <include layout="@layout/udesk_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/udesk_confirm_pop_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <include layout="@layout/udesk_line_vertical" />

            <TextView
                android:id="@+id/udesk_confirm_pop_positive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>